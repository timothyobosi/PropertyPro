<resources>
    <!-- Base application theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Customize your theme here.-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/phone_signin</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginPageTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/login_page</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="registrationTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!--Customize your theme here.-->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryDark">@color/lavender</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Widget.Theme.PropertyPro.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.PropertyPro.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="WhiteTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <!-- Add other attributes as needed -->
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxStrokeWidth">3dp</item> <!-- Adjust the thickness as needed -->
        <item name="android:textColorHint">@android:color/white</item> <!-- Set the hint (label) text color -->
        <item name="android:textColor">@android:color/white</item> <!-- Set the input text color -->
    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize attributes if needed -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:popupWindowStyle">@style/PopupWindow</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <!-- ... other style attributes ... -->

    </style>

    <style name="PopupWindow" parent="Widget.AppCompat.PopupWindow">
        <!-- Customize attributes if needed -->
    </style>

    <style name="DropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <!-- Customize attributes if needed -->
    </style>

    <style name="ActionBarTabStyle" parent="Widget.AppCompat.ActionBar.TabView">
        <!-- Customize attributes if needed -->
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"

        />

</resources>
