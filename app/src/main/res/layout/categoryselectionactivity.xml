<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/category_screen"
    android:layout_height="match_parent"
    tools:context=".CategorySelectionActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buyerButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/light_blue_A400"
        android:text="Buyer"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/buyer_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="255dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sellerButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/light_blue_900"
        android:text="Seller"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/seller_icon"
        app:layout_constraintTop_toBottomOf="@+id/buyerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
